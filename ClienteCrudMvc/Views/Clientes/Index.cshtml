@model IEnumerable<ClienteCrudMvc.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}


<h2 align ="center " >Lista de Clientes</h2>

<p>
	<button title="Adicionar" class="btn btn-success" value="Novo" onclick="location.href='@Url.Action("Create", "Clientes")'">
		<span class="glyphicon glyphicon-plus"></span>
	</button>
</p>
<table class="table">
    <tr>
		<th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th></th>
    </tr>

	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Nome)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CPF)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DataNascimento)
			</td>
			<td>
				@if (item.Genero == "M")
				{
				<p>Masculino</p>
				} else if(item.Genero == "F")
				{
					<p>Feminino</p>
				}
			</td>
			<td>
				<button title="Editar" class="btn btn-warning" onclick="location.href='@Url.Action("Edit", "Clientes", new { id = item.Id })'">
					<span class="glyphicon glyphicon-edit"></span>
				</button>

				<button title="Detalhes" class="btn btn-info" onclick="location.href='@Url.Action("Details", "Clientes", new { id = item.Id })'" >
					<span class="glyphicon glyphicon-list"></span>
				</button>

				<button title="Excluir" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Clientes", new { id = item.Id })'" >
					<span class="glyphicon glyphicon-trash"></span>
				</button>
			</td>
		</tr>
	}

</table>
